<div class="container">
  <div class="row center-block" style="margin-bottom:5px">
    <div class="content">
      
        <ul class="nav nav-tabs" role="tablist">
          <% if @activities.present? %>
            <li class="<%= 'active' %>"><a href="#activities" role="tab" data-toggle="tab">Activities</a></li>
          <% end %>
          <% if @users.present? %> 
            <li class="<%= 'active' if @activities.blank? %>"><a href="#users" role="tab" data-toggle="tab">Users</a></li>
          <% end %>
        </ul>
        <div class="panel">
        <div class="tab-content">
          <div class="tab-pane <%= 'active' if @activities %>" id="activities">
            <% if @showCreateAlert %>
                <div class="row center-block" style="margin-bottom:0px;margin-top:0px;padding-top:0px;">
                    <div class="row" style="margin-top:0px;">
                      <div class="panel panel-body text-center">
                        <p class="lead" style="text-size:smaller;">No activities matched search criteria, showing expanded results. Create an alert to be notified of future activities!</p>
                        <%= link_to 'Create Alert', alert_create_path(params), method: 'POST', class: 'btn btn-sm btn-info' %>
                      </div>
                    </div>
                </div>
            <% end %>
            <% @activities.each do |a| %>
              <div id="results-row" class="row row-md-height">
                <div class="col-md-2 panel panel-left">
                  <h2 style="color:white"><strong><%= a.datetime.strftime('%^b %e') %></strong></h2>
                  <h3 style="color:white"><%= a.datetime.strftime('%-I:%M %p') %></h3>
                  <font size="1" style="color:white"><%=a.city%>, <%=a.state%></font>
                </div>
                <div class="col-md-8 panel panel-middle" style="background-color:#fff">
                  <h2>
                    <%= link_to a.activity_name, activity_path(a.id) %>
                    <% if a.cancelled %>
                      <font color='red'>(Cancelled)</font>
                    <% end %>
                  </h2>
                  <p class="lead"><%= truncate(a.description, :length => 150) %></p>
                </div>
                <div class="col-md-2 panel panel-right" style="background-color:#fff">
                  <% if a.image.exists? %>
                    <%= image_tag a.image.url, style: 'max-height:150px' %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
          <% if @users.present? %>
          <div class="tab-pane <%= 'active' if @activities.blank? %>" id="users">
            <% @users.each do |u| %>
              <p class="lead">
                <% unless u.user.nil? %>
                <p class="lead"><%= profile_img(u.user) %> 
                <% end %>
                <%= link_to (u.first_name + ' ' + u.last_name), profile_path(u.user_id) %>
              </p>
            <% end %>
          </div>
          <% end %>
        </div>
       </div>
      </div>
    </div>
  </div>
</div>
