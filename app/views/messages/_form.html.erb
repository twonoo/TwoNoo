<script>
   $(function(){
     $('#message_body').keyup(function(e) {
       if (e.keyCode == 13 && !e.shiftKey) {
         e.preventDefault();
         $('#send_message').trigger("click");
       }
       else if (e.keyCode == 27)
       {
         this.form.reset();
       }
     });
   });
</script>
<style type='text/css'>
  #message_body { width: 100%; }
</style>
<%= form_for :message, url: reply_conversation_path(conversation) do |f| %>
  <%= f.text_area :body, as: :text, :rows=>"3" %>
  <%= f.submit 'Send Message', class: 'btn btn-success btn-sm', data: {disable_with: "Sending Message..."}, id: "send_message" %>
<% end %>
