<div class="container-fluid">
	<div class="row">
		<div style="background-color:#36359f; height:275px">
			<div class="col-md-6 col-md-offset-3">
				<div class="text-center" style="margin-top:30px; color:white;">
					<%= profile_img(@profile) %>
            <h3><%= @profile.profile.first_name %> <%= @profile.profile.last_name %></h3> 
            <p><%= @profile.profile.about_me %></p>
            <% if !current_user.nil? && (current_user != @profile) then %>
            <h3><%= current_user.following?(@profile) ? (link_to 'Unfollow', unfollow_path(@profile.id), class: 'label label-info') : (link_to 'Follow', follow_path(@profile.id), class: 'label label-info') %></h3>
            <% end %>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="text-center">
			<ul class="nav nav-pills nav-justified">
		      <li id="profile_activities" class="active">
						<%= link_to 'Activities', @profile.id.to_s+'/activities_profile', :remote => true %>
					</li>
		      <li id="profile_attending">
						<%= link_to 'Attending', @profile.id.to_s+'/attending_profile', :remote => true %>
					</li>
		      <li id="profile_followers">
						<%= link_to 'Followers', @profile.id.to_s+'/followers_profile', :remote => true %>
					</li>
		      <li id="profile_following">
						<%= link_to 'Following', @profile.id.to_s+'/following_profile', :remote => true %>
					</li>
		    </ul>
			</div>
		</div>
	</div>
	<div class="row">
		<div id="profile_data" class="col-md-8 col-md-offset-2" style="margin-top:50px">
			<%= render '/activities/activities' %>
		</div>
	</div>
</div>

<style type="text/css">
	.navbar {margin-bottom: 0;}

	body {
		background-color: white;
	}

	.nav-pills { 
		margin-top: 10px;
		color: black;
	}

	.nav-pills > li > a {
		color: #777;
		border: 1px solid #ddd;
		margin-left:15px;
		margin-right:15px;
		padding:5px 0px 5px 0px;

	}

</style>
