<div class="container-fluid">
	<div class="row">
		<div style="background-color:#36359f; height:275px">
			<div class="col-md-6 col-md-offset-3">
				<div class="text-center" style="margin-top:30px; color:white;">
					<%= image_tag @profile.profile.profile_picture.url(:thumb), class: 'img-circle center-text' %>
            <h3><%= @profile.profile.first_name %> <%= @profile.profile.last_name %></h3> 
            <p><%= @profile.profile.about_me %></p>
            <h4><%= current_user.following?(@profile) ? (link_to 'Unfollow', unfollow_path(@profile.id), class: 'label label-info') : (link_to 'Follow', follow_path(@profile.id), class: 'label label-info') %></h4>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="text-center">
			<ul class="nav nav-pills nav-justified">
		      <li class="active"><a href="#">Activities</a></li>
		      <li><a href="#">Attending</a></li>
		      <li><a href="#">Followers</a></li>
		      <li><a href="#">Following</a></li>
		    </ul>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-8 col-md-offset-2" style="margin-top:50px">
			<% @activities.each do |a| %>
				<div id="results-row" class="row row-md-height">
					<div class="col-md-2 panel panel-left">
						<h2><%= a.datetime.strftime('%^b %e') %></h2>
						<h4><%= a.datetime.strftime('%-I:%M %p') %></h4>
					</div>
					<div class="col-md-10 panel panel-right" style="background-color:#fff">
						<h3><%= link_to a.activity_name, activity_path(a.id) %></h3>
						<p class="lead"><%= truncate(a.description, :length => 150) %></p>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>

<style type="text/css">
	.navbar {margin-bottom: 0;}

	body {
		background-color: white;
	}

	.nav-pills { 
		margin-top: 10px;
		color: black;
	}

	.nav-pills > li > a {
		color: #777;
		border: 1px solid #ddd;
		margin-left:15px;
		margin-right:15px;
		padding:5px 0px 5px 0px;

	}

</style>