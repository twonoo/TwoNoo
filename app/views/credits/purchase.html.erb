<div class="container">
  <div class="row">
    <div class="panel panel-default panel-body">
      <% flash.each do |key, value| %>
        <div class="<%= flash_class(key) %>">
              <%= value %>
        </div>
      <% end %>
      <div class="col-md-6 text-center">
        <table class="table table-condensed" style="font-size:17px;text-align:center;">
          <thead>
            <td><strong>Credits</strong></td>
            <td><strong>Price<strong></td>
            <td></td>
          </thead>
          <tbody>
            <tr>
              <td>5</td>
              <td>$6.29</td>
              <td><button class="btn btn-success open-purchase" data-number-of-credits="5" data-toggle="modal" data-target="#purchaseModal">Purchase</button></td>
            </tr>
            <tr>
              <td>10</td>
              <td>$11.99</td>
              <td><button class="btn btn-success open-purchase" data-number-of-credits="10" data-toggle="modal" data-target="#purchaseModal">Purchase</button></td>
            </tr>
            <tr>
              <td>20</td>
              <td>$21.99</td>
              <td><button class="btn btn-info open-purchase" data-number-of-credits="20" data-toggle="modal" data-target="#purchaseModal">Most Popular</button></td>
            </tr>
            <tr>
              <td>50</td>
              <td>$49.99</td>
              <td><button class="btn btn-success open-purchase" data-number-of-credits="50" data-toggle="modal" data-target="#purchaseModal">Purchase</button></td>
            </tr>
            <tr>
              <td>100</td>
              <td>$98.99</td>
              <td><button class="btn btn-success open-purchase" data-number-of-credits="100" data-toggle="modal" data-target="#purchaseModal">Purchase</button></td>
            </tr>
          </tbody>
        </table>
        <hr>
        <div style="margin:0 auto">
          <label>Enter your amount</label></br>
          <div class="input-group input-group-md" style="width:40%;margin:0 auto">
                <input id="custom-input" class="form-control">
                <span class="input-group-btn">
                  <input class="btn btn-success open-purchase" id="custom-purchase" name="commit" data-toggle="modal" data-target="#purchaseModal" type="submit" value="Purchase" disabled="disabled">
                </span>
          </div>
          <h5 id="calculation" style="display:none">Your Price: $<span id="calculation-value"></span></h5>
      </div>
    </div>
    <div class="col-md-3 col-md-offset-2 text-center">
      <div class="row">
        <span><h2>8 Credits</h2></span>
        <span><h6>Your Balance</h6></span>
      </div>
      <div class="row" style="margin-top:25px">
        <p class="lead">Blurb about how credits are awesome and what they're used for.. </p>
      </div>
    </div>
  </div>

<!-- Modal -->
<div class="modal fade" id="purchaseModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">Purchase Credits</h4>
      </div>
      <div class="modal-body">
        <p class="lead">You're about to purchase <span id="number_of_credits"></span> credits for $<span id="cost_calculation"></span>
        <%= form_tag credits_path, id: 'payment-form', class: 'form-inline' do %>
        <span class="payment-errors"></span>
        <div class="form-row">
          <label>
            <span>Card Number</span></br>
            <input type="text" class="form-control" size="20" data-stripe="number"/>
          </label>
        </div>
     
        <div class="form-row">
          <label>
            <span>CVC</span></br>
            <input type="text" class="form-control" size="4" data-stripe="cvc"/>
          </label>
        </div>
     
        <div class="form form-row form-inline">
          <label>
            <span>Expiration (MM/YYYY)</span></br>
            <input type="text" class="form-" style="display:" size="2" data-stripe="exp-month"/> / 
            <input type="text" class="form-" style="display:inline" size="4" data-stripe="exp-year"/>
          </label>
        </div>

        <article>
          <label class="amount">
          </label>
        </article>

        <%= hidden_field_tag :number_of_credits, '1'  %> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Purchase</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

</div>

<script>

  var cost = 125

  $('#slide').slider({
    formater: function(value) {
      return 'Credits: ' + value;
    }
  });

  function money_round(num) {
    return Math.ceil(num * 100) / 100;
  }

  function calculate_cost(value) {
    if (value > 0 && value < 5) { cost = 129 } else
    if (value == 5) { cost = 125.8 } else
    if (value > 5 && value < 10) { cost = 124 } else
    if (value == 10) { cost = 119.9 } else
    if (value > 10 && value < 20) { cost = 119 } else
    if (value == 20) { cost = 109.95 } else
    if (value > 20 && value < 50) { cost = 109 } else
    if (value == 50) { cost = 99.98 } else
    if (value > 50 && value < 100) { cost = 99 } else
      cost = 98.99;
    return money_round(cost * value / 100);
  };

  $("#custom-input").keyup( function() {
    value = $(this).val();
    $("#calculation-value").text(calculate_cost(value));
    $("#calculation").show();
    $("#custom-purchase").removeAttr("disabled");
  });

  $(document).on("click", ".open-purchase", function () {
       if ($(this).attr('id') == "custom-purchase") { 
          var number_of_credits = $("#custom-input").val()} 
       else
          var number_of_credits = $(this).data('number-of-credits');

       $(".modal-body #number_of_credits").text( number_of_credits );
       $(".modal-body #cost_calculation").text( calculate_cost(number_of_credits));


       // As pointed out in comments, 
       // it is superfluous to have to manually call the modal.
       // $('#addBookDialog').modal('show');
    });

</script>


<script type="text/javascript" src="https://js.stripe.com/v2/"></script>

<script type="text/javascript">
    // This identifies your website in the createToken call below
    Stripe.setPublishableKey("<%= Rails.configuration.stripe[:publishable_key] %>");
 
    var stripeResponseHandler = function(status, response) {
      var $form = $('#payment-form');
 
      if (response.error) {
        // Show the errors on the form
        $form.find('.payment-errors').text(response.error.message);
        $form.find('button').prop('disabled', false);
      } else {
        // token contains id, last4, and card type
        var token = response.id;
        // Insert the token into the form so it gets submitted to the server
        $form.append($('<input type="hidden" name="stripeToken" />').val(token));
        // and re-submit
        $form.get(0).submit();
      }
    };
 
    jQuery(function($) {
      $('#payment-form').submit(function(e) {
        var $form = $(this);
 
        // Disable the submit button to prevent repeated clicks
        $form.find('button').prop('disabled', true);
 
        Stripe.card.createToken($form, stripeResponseHandler);
 
        // Prevent the form from submitting with the default action
        return false;
      });
    });
  </script>