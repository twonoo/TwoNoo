<div class="container">
	<%= flash_messages %>
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading">
    		<h3 class="panel-title">Credits</h3>
  		</div>
			<div class="panel-body">
	    <div class="col-md-7">
	    	<table class="table">
	    		<thead>
	    			<tr>
	    				<td>
	    					Type
	    				</td>
	    				<td>
	    					Amount
	    				</td>
	    				<td>
	    					Cost
	    				</td>
	    				<td>
	    					Date
	    				</td>
	    				<td>
	    					Balance
	    				</td>
	    			</tr>
	    		</thead>
	    		<tbody>
	    		<% @user_transactions.each do |t| %>
	    			<tr>
	    				<td>
	    					<%= t.transaction_type.name %>
	    				</td>
	    				<td>
	    					<%= t.amount %>
	    				</td>
	    				<td>
	    					<%= "$#{t.cost}" if t.cost %>
	    				</td>
	    				<td>
	    					<%= t.created_at.strftime('%m-%d-%Y') %>
	    				</td>
	    				<td>
	    					<%= t.balance %>
	    				</td>
	    			</tr>
	    		<% end %>
	    	</tbody>
	    </div>
	  </div>
  </div>
</div>
