<% if params[:s] == 't' %>
    <div class="alert alert-warning fade in">
      <button class="close" id="signInAlert" data-dismiss="alert">x</button>
      You need to sign in or sign up to perform that action.
    </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">Sign In</h2>
        </div>
        <div class="panel-body" style="background-color:#F8F8F8">
          <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: 'btn btn-md btn-primary btn-block' %>
          <h1>
            <small>OR</small>
          </h1>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
              <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email address", style: "margin-bottom:5px" %>
              <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>

              <% if devise_mapping.rememberable? -%>
                  <%= hidden_field_tag :remember_me, true %>
              <% end -%>
              <br/>

              <div><%= f.submit "Sign in", class: 'btn btn-success btn-block btn-md' %></div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>