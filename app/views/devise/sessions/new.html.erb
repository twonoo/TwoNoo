<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Sign In</h3>
      </div>
      <div class="panel-body">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
		      <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email address",  style: "margin-bottom:5px" %>
		      <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>

				  <% if devise_mapping.rememberable? -%>
					    <div><%= f.label :remember_me, class: "col-md-5 control-label", style: "padding-right:10px" %> 
					    	<%= f.check_box :remember_me, class: "form-control" %> </div>
				  <% end -%>

				  <div><%= f.submit "Sign in", class: 'btn btn-primary btn-block btn-lg' %></div>
				<% end %>
				
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>