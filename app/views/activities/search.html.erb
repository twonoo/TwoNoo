<div class="container">
  <div class="row center-block" style="margin-bottom:5px">
		<div class="content">
			<div class="row">
				<div class="col-md-3">
					<div class="panel panel-default">
						<div class="panel-heading">
			    		<h3 class="panel-title">Refine Results</h3>
			  		</div>
						<div class="panel-body">
							TODO: Refine options
			      </div>
			    </div>
		    </div>
				<div class="col-md-9">
					<% @activities.each do |a| %>
							<div id="results-row" class="row row-md-height">
								<div class="col-md-2 panel panel-left">
									<h2><%= a.datetime.strftime('%^b %e') %></h2>
									<h4><%= a.datetime.strftime('%-I:%M %p') %></h4>
								</div>
								<div class="col-md-10 panel panel-right" style="background-color:#fff">
									<h3><%= link_to a.activity_name, activity_path(a.id) %></h3>
									<p class="lead"><%= truncate(a.description, :length => 150) %></p>
								</div>
							</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>