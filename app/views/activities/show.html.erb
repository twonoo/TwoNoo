<script type='text/javascript'>
    <% if current_user %>

    $(function () {
        <% if @rsvps.where(user_id: current_user.id).present? %>
        setupUnRsvp();
        <% else %>
        setupRsvp();
        <% end %>

        $('#close_overlay').click(function () {
            hideOverlay();
        })

    })

    function hideOverlay() {
        $('#overlay').hide();
    }

    function showOverlay() {
        $('#overlay').show();
    }

    function setupRsvp() {
        var button = $('#rsvp_button');
        button.html("Join Us!");
        button.removeClass('btn-danger');
        button.addClass('btn-success');
        button.unbind('click');
        attachRsvpHandler(button, 'rsvp');
    }

    function setupUnRsvp() {
        var button = $('#rsvp_button');
        button.html("You're Going!");
        button.removeClass('btn-success');
        button.addClass('btn-danger');
        button.unbind('click');
        attachRsvpHandler(button, 'unrsvp');
    }

    function attachRsvpHandler(button, type) {
        button.click(function () {
            $.ajax({
                url: '/activities/' + type,
                type: 'GET',
                dataType: 'JSON',
                data: {activity_id:<%= @activity.id %>, user_id:<%= current_user.id %>},
                success: function (data) {
                    if (type == 'rsvp') {
                        showOverlay();
                        $('#whos_going').append('<p><%= link_to current_user.profile.first_name + ' ' + current_user.profile.last_name, current_user %></p>')
                        setupUnRsvp();
                    } else {
                        hideOverlay();
                        $("#whos_going p:contains('<%= current_user.profile.first_name + ' ' + current_user.profile.last_name %>')").remove();
                        setupRsvp();
                    }
                },
                error: function (data) {
                    console.log('error');
                }
            });
        })
    }

    <% end %>

</script>
