<script>
   $(function(){
     $('#comment').keyup(function(e) {
       if (e.keyCode == 13 && !e.shiftKey) {
         e.preventDefault();
         this.form.submit();
       }
       else if (e.keyCode == 27)
       {
         this.form.reset();
       }
     });
   });
</script>
<style type='text/css'>
  #comment { width: 100% }
</style>
<%= form_tag({controller: 'activities', action: 'comment'}, id: 'comment_form', method: 'post') do %>
  <%= hidden_field_tag 'id', activity.id.to_s %>
  <%= text_area_tag 'comment' %>
<% end %>
