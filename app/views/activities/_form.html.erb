<script>
   $(function(){
     $('#comment').keyup(function(e) {
       if (e.keyCode == 13 && !e.shiftKey) {
         e.preventDefault();
         $('#submit_comment').trigger("click");
       }
       else if (e.keyCode == 27)
       {
         this.form.reset();
       }
     });
   });
</script>
<style type='text/css'>
  #comment { width: 100% }
</style>
<%= form_tag({controller: 'activities', action: 'comment'}, id: 'comment_form', method: 'post') do %>
  <%= hidden_field_tag 'id', activity.id.to_s %>
  <%= text_area_tag 'comment' %>
  <%= submit_tag 'Comment', class: 'btn btn-success btn-sm', data: {disable_with: "Submitting..."}, id: "submit_comment" %>
<% end %>
