<% provide(:title, 'CREATE') %>
  <div>
    <%= form_for(@activity, :html => { :multipart => true } ) do |f| %>
      <%= render 'shared/error_messages' %>
      	<div class="column1">
          <p>
            <label>Activity Name:</label>
            <%= f.text_field :Name, size: 25, maxlength: 50, required: true, autofocus: true %>
          </p>
          <p>
            <label>Activity Date:</label>
            <%= f.date_field :ActivityDate %>
            <label>Time:</label>
            <%= f.time_field :ActivityTime %>
          </p>
          <p>
            <label>Address:</label>
            <%= f.text_field :StreetAddress1, size: 50, maxlength: 100 %>
          </p>
          <p>
            <label>City:</label>
            <%= f.text_field :City, size: 25, maxlength: 50, required: true %>
            <label>State:</label>
            <%= f.text_field :State, size: 2, maxlength: 2, required: true %>
          </p>
          <p>
            <label>Venue Name:</label>
            <%= f.text_field :LocationName, size: 25, maxlength: 50, placeholder: "Example: Billy's Bar" %>
          </p>
          <p>
            <label>Website URL:</label>
            <%= f.text_field :Website, size: 25, maxlength: 50 %>
          </p>
          <p>
            <label>Upload Photo:</label>
            <%= f.file_field :picture %>
          </p>
          <p>
            <label>Description:</label>
            <textarea name="activityDescription" cols="80" rows="4" class="required" placeholder="Describe you activity..." required></textarea>
          </p>
      	</div>
      	<div class="column2">
          <p>Allow others to RSVP for this activity?
            <br />
            <input type="radio" name="AllowRSVP" value="Yes" checked="checked" />Yes
            <input type="radio" name="AllowRSVP" value="No"/>No
          </p>      		
          <fieldset id="ActivityType">
            <legend>Activity Type (Select ALL that apply):
            </legend>
            <table>
              <tr>
                <td><input type="checkbox" name="activityType" value="Sports"/> Sports</td>
                <td><input type="checkbox" name="activityType" value="Outdoors"/> Outdoors</td>
                <td><input type="checkbox" name="activityType" value="Nightlife"/> Nightlife</td>
              </tr>
              <tr>
                <td><input type="checkbox" name="activityType" value="Arts"/> Arts</td>
                <td><input type="checkbox" name="activityType" value="EatDrink"/> Eat & Drink</td>
                <td><input type="checkbox" name="activityType" value="Community"/> Community</td>
              </tr>
              <tr>
                <td><input type="checkbox" name="activityType" value="Business"/> Business</td>
                <td><input type="checkbox" name="activityType" value="Cool Stuff"/> Cool Stuff</td>
              </tr>
            </table>
          </fieldset>
        </div>
        <%= image_submit_tag("SaveButton.png", alt: "Save", class: "save", id: "save")%>
      <% end %>
