<div class="row">
<% if @activities.present? %>
	<div class="col-md-12">
		<h2>Upcoming Activities</h2>
		<% @activities.each do |a| %>
			<div id="results-row" class="row row-md-height">
				<div class="col-md-2 panel panel-left">
					<h2 style="color:white"><strong><%= a.datetime.strftime('%^b %e') %></strong></h2>
					<h3 style="color:white"><%= a.datetime.strftime('%-I:%M %p') %></h3>
				</div>
				<div class="col-md-10 panel panel-right" style="background-color:#fff">
					<h2>
						<%= link_to a.activity_name, activity_path(a.id) %>
						<% if a.cancelled %>
							<font color='red'>(Cancelled)</font>
						<% end %>
					</h2>
					<p class="lead"><%= truncate(a.description, :length => 150) %></p>
				</div>
			</div>
		<% end %>
	</div>
	<br/>
<% else %>
	<h2>No upcoming activities</h2>
<% end %>

<% if @activitiesPast.present? %>
	<div>
		<h2>Past Activities</h2>
	</div>
	<div class="col-md-12">
		<% @activitiesPast.each do |a| %>
			<div id="results-row" class="row row-md-height">
				<div class="col-md-2 panel panel-left">
					<h2><%= a.datetime.strftime('%^b %e') %></h2>
					<h4><%= a.datetime.strftime('%-I:%M %p') %></h4>
				</div>
				<div class="col-md-10 panel panel-right" style="background-color:#fff">
					<h3>
						<%= link_to a.activity_name, activity_path(a.id) %>
						<% if a.cancelled %>
							<font color='red'>(Cancelled)</font>
						<% end %>
					</h3>
					<p class="lead"><%= truncate(a.description, :length => 150) %></p>
				</div>
			</div>
		<% end %>
	</div>
<% end %>
</div>