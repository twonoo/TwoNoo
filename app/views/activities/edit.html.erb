<% provide(:title, 'Edit Activity') %>
<%= form_for :activity, url: activity_path(@activity.id),
method: :patch do |f| %>
     <%= render 'shared/error_messages' %>

      <%= f.label :Name, "Name" %>
      <%= f.text_field :Name %>

      <%= f.label :StartDateTime, "Start Date" %>
      <%= f.text_field :StartDateTime %>

      <%= f.label :EndDateTime, "End Date" %>
      <%= f.text_field :EndDateTime %>

      <%= f.label :City %>
      <%= f.text_field :City %>

      <%= f.label :State %>
      <%= f.text_field :State %>

      <%= f.label :StreetAddress1, "Street Address 1" %>
      <%= f.text_field :StreetAddress1 %>

      <%= f.label :StreetAddress2, "Street Address 2" %>
      <%= f.text_field :StreetAddress2 %>

      <%= f.label :Country, "Country" %>
      <%= f.text_field :Country %>

      <%= f.submit "Update my activity", class: "btn btn-large btn-primary" %>
    <% end %>
 
<%= link_to 'Back', activities_path %>
