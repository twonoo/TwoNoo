<% provide(:title, 'Edit Activities') %>
  <%= render 'shared/error_messages' %>
    <%= form_for(@activity, :html => { :multipart => true } ) do |f| %>
      <div class="column1">
        <p>
          <label>Activity Name:</label>
          <%= f.text_field :Name, size: 25, maxlength: 50, required: true, autofocus: true %>
        </p>
        <p>
          <label>Activity Date:</label>
          <%= f.date_field :ActivityDate %>
          <label>Time:</label>
          <%= f.time_field :ActivityTime %>
        </p>
        <p>
          <label>Address:</label>
          <%= f.text_field :StreetAddress1, size: 50, maxlength: 100 %>
        </p>
        <p>
          <label>City:</label>
          <%= f.text_field :City, size: 25, maxlength: 50, required: true %>
          <label>State:</label>
          <%= f.text_field :State, size: 2, maxlength: 2, required: true %>
        </p>
        <p>
          <label>Venue Name:</label>
          <%= f.text_field :LocationName, size: 25, maxlength: 50, placeholder: "Example: Billy's Bar" %>
        </p>
        <p>
          <label>Website URL:</label>
          <%= f.text_field :Website, size: 25, maxlength: 50 %>
        </p>
        <p><label>Description:</label>
          <textarea name="activityDescription" cols="80" rows="4" class="required" required>Come join us for pickup soccer every Tuesday at City Park! All skill levels are welcome and it's coed. We meet on the east side of the park near York and 17th.</textarea>
        </p>
      </div>
      <div class="column2">
        <p>Allow others to RSVP for this activity?
          <br />
          <input type="radio" name="AllowRSVP" value="Yes" checked="checked" />Yes
          <input type="radio" name="AllowRSVP" value="No"/>No
        </p>      		
        <fieldset id="ActivityType">
          <legend>Activity Type (Select ALL that apply):</legend>
          <table>
            <% @cellNum = 1 %>
            <% unless @activityTypes.nil? %>
              <% @activityTypes.each do |activityType| %>
                <% if @cellNum%3 == 1 %>
                  <tr>
                <% end %>
                <td><input type="checkbox" name="activityType[]" value="<%=activityType.id%>"/><%=activityType.Type%></td>
                <% if @cellNum%3 == 0 %>
                  </tr>
                <% end %>
                <% @cellNum = @cellNum + 1 %>
              <% end %>
            <%end%>
            <% if (@cellNum%3 > 0) && !(@activityTypes.nil?) %>
              </tr>
            <% end %>
          </table>
        </fieldset>
      </div>
      <div>
        <input type="image" class="save" id="save" src="images/SaveButton.png">
      </div>
    <% end %>
    <div style="width:900px;overflow:auto;">
      <%= form_tag({controller: "activities", action: "activityPictureUpload"}, {:remote => true, :multipart => true, :authenticity_token => true }) do %>
        <label>Upload Photo:</label>
        <%= hidden_field_tag "activityId", @activity.id %>
        <%= file_field 'activityPicture', :picture %>
        <%= submit_tag "Upload" %>
      <% end %>
    </div>
    <div style="width:900px;overflow:auto;">
      <table>
        <tr>
          <%= render partial: "activityPhoto", collection: @activityPhotos %>
        </tr>
      </table>
    </div>
    <div>
      <a href=""><input type="submit" class="CancelButtons" name="Cancel Activity" value="Cancel Activity"></a>
    </div>
      